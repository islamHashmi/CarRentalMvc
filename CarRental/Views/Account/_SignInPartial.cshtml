@model CarRental.ViewModel.LoginViewModel

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<h2>Login</h2>
<hr />

<div class="form-group">
    @Html.LabelFor(model => model.LoginId, htmlAttributes: new { @class = "form-label" })
    @Html.TextBoxFor(model => model.LoginId)
</div>
<div class="form-group">
    @Html.LabelFor(model => model.LoginKey, htmlAttributes: new { @class = "form-label" })
    @Html.TextBoxFor(model => model.LoginKey)
</div>
