                @Html.EditorFor(model => model.LoginKey, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LoginKey, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmLoginKey, htmlAttributes: new { @class = "control-label col-md-2" })
