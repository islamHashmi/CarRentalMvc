@model IEnumerable<CarRental.ViewModel.BranchViewModel>

@{
    ViewBag.Title = "BranchList";
}

<h2>BranchList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BranchName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BranchName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.ActionLink("Edit", "BranchManage", new { key= HelperClass.Encrypt(item.BranchId) }) |
            @Html.ActionLink("Details", "BranchDetails", new { key = HelperClass.Encrypt(item.BranchId) }) |
            @Html.ActionLink("Delete", "BranchDelete", new { key = HelperClass.Encrypt(item.BranchId) })
        </td>
    </tr>
}

</table>
