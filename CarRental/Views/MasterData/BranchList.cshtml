@model IEnumerable<CarRental.ViewModel.BranchViewModel>

@{
    ViewBag.Title = "BranchList";
}

<h3>Branches</h3>
<hr />

<div class="card">
    <div class="card-header">
        @Html.ActionLink("Create New", "BranchManage")
    </div>
    <div class="table-responsive">
        <table class="table table-sm">
            <tr class="thead-light">
                <th>
                    @Html.DisplayNameFor(model => model.BranchName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BranchName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            @Html.ActionLink("Edit", "BranchManage", new { key = HelperClass.Encrypt(item.BranchId) }, new { @class = "btn btn-secondary btn-sm" })
                            @Html.ActionLink("Details", "BranchDetails", new { key = HelperClass.Encrypt(item.BranchId) }, new { @class = "btn btn-secondary btn-sm" })
                            @Html.ActionLink("Delete", "BranchDelete", new { key = HelperClass.Encrypt(item.BranchId) }, new { @class = "btn btn-secondary btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>    
</div>


