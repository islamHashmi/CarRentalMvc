@model IEnumerable<CarRental.ViewModel.ExpenseViewModel>

@{
    ViewBag.Title = "ExpenseList";
}

<h4>Expense Heads</h4>

<div class="card">
    <div class="card-header">
        @Html.ActionLink("Create New", "ExpenseManage")
    </div>
    <div class="table-responsive">
        <table class="table table-sm">
            <tr class="thead-light">
                <th>
                    @Html.DisplayNameFor(model => model.ExpenseName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpenseName)
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            @Html.ActionLink("Edit", "ExpenseManage", new { key = HelperClass.Encrypt(item.ExpenseId) }, new { @class = "btn btn-secondary btn-sm" })
                            @Html.ActionLink("Details", "ExpenseDetails", new { key = HelperClass.Encrypt(item.ExpenseId) }, new { @class = "btn btn-secondary btn-sm" })
                            @Html.ActionLink("Delete", "ExpenseDelete", new { key = HelperClass.Encrypt(item.ExpenseId) }, new { @class = "btn btn-secondary btn-sm" })
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


