@model IEnumerable<CarRental.ViewModel.DepartmentViewModel>

@{
    ViewBag.Title = "DepartmentList";
}

<h3>Departments</h3>
<hr />

<div class="card">
    <div class="card-header">
        @Html.ActionLink("Create New", "DepartmentManage")
    </div>
    <table class="table table-sm table-responsive-sm">
        <tr class="thead-light">
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        @Html.ActionLink("Edit", "BranchManage", new { key = HelperClass.Encrypt(item.DepartmentId) }, new { @class = "btn btn-secondary btn-sm" })
                        @Html.ActionLink("Details", "BranchDetails", new { key = HelperClass.Encrypt(item.DepartmentId) }, new { @class = "btn btn-secondary btn-sm" })
                        @Html.ActionLink("Delete", "BranchDelete", new { key = HelperClass.Encrypt(item.DepartmentId) }, new { @class = "btn btn-secondary btn-sm" })
                    </div>
                </td>
            </tr>
        }

    </table>
</div>

