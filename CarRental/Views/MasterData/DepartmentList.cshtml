@model IEnumerable<CarRental.ViewModel.DepartmentViewModel>

@{
    ViewBag.Title = "DepartmentList";
}

<h2>DepartmentList</h2>

<p>
    @Html.ActionLink("Create New", "DepartmentManage")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td>
            @Html.ActionLink("Edit", "DepartmentManage", new { key = HelperClass.Encrypt(item.DepartmentId) }) |
            @Html.ActionLink("Details", "DepartmentDetails", new { key = HelperClass.Encrypt(item.DepartmentId) }) |
            @Html.ActionLink("Delete", "DepartmentDelete", new { key = HelperClass.Encrypt(item.DepartmentId) })
        </td>
    </tr>
}

</table>
