@model CarRental.ViewModel.CompanyViewModel

@{
    ViewBag.Title = "CompanyManage";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CompanyId)

    <h4>Company</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="card">
        <div class="card-body">
            <div class="form-group row">
                @Html.LabelFor(model => model.CompanyName, htmlAttributes: new { @class = "col-sm-2 col-form-label col-form-label-sm" })
                <div class="col-sm-5">
                    @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "col-sm-2 col-form-label col-form-label-sm" })
                <div class="col-sm-5">
                    @Html.TextAreaFor(model => model.Address, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.PanNumber, htmlAttributes: new { @class = "col-sm-2 col-form-label col-form-label-sm" })
                <div class="col-sm-5">
                    @Html.EditorFor(model => model.PanNumber, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.PanNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Telephone1, htmlAttributes: new { @class = "col-sm-2 col-form-label col-form-label-sm" })
                <div class="col-sm-5">
                    @Html.EditorFor(model => model.Telephone1, new { htmlAttributes = new { @class = "form-control form-control-sm", maxLength="10" } })
                    @Html.ValidationMessageFor(model => model.Telephone1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Telephone2, htmlAttributes: new { @class = "col-sm-2 col-form-label col-form-label-sm" })
                <div class="col-sm-5">
                    @Html.EditorFor(model => model.Telephone2, new { htmlAttributes = new { @class = "form-control form-control-sm", maxLength = "10" } })
                    @Html.ValidationMessageFor(model => model.Telephone2, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.ServiceTaxNumber, htmlAttributes: new { @class = "col-sm-2 col-form-label col-form-label-sm" })
                <div class="col-sm-5">
                    @Html.EditorFor(model => model.ServiceTaxNumber, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.ServiceTaxNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <input type="submit" value="Save" class="btn btn-primary btn-sm" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "CompanyList")
</div>
