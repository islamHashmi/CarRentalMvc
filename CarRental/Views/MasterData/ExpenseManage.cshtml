@model CarRental.ViewModel.ExpenseViewModel

@{
    ViewBag.Title = "ExpenseManage";
}

<h2>Expense Head</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ExpenseId)

    <div class="card">
        <div class="card-body">
            <div class="form-group row">
                @Html.LabelFor(model => model.ExpenseName, htmlAttributes: new { @class = "col-sm-2 col-form-label col-form-label-sm" })
                <div class="col-sm-5">
                    @Html.EditorFor(model => model.ExpenseName, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.ExpenseName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <input type="submit" value="Save" class="btn btn-primary btn-sm" />
                </div>
            </div>
        </div>
    </div>


}

<div>
    @Html.ActionLink("Back to List", "ExpenseList")
</div>
