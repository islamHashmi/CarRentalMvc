@model CarRental.ViewModel.BranchViewModel

@{
    ViewBag.Title = "BranchManage";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.BranchId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <h4>BranchViewModel</h4>
    <hr />

    <div class="card">
        <div class="card-body">
            <div class="form-group row">
                @Html.LabelFor(model => model.BranchName, htmlAttributes: new { @class = "col-sm-2 col-form-label col-form-label-sm" })
                <div class="col-sm-5">
                    @Html.EditorFor(model => model.BranchName, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.BranchName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.CompanyId, htmlAttributes: new { @class = "col-sm-2 col-form-label col-form-label-sm" })
                <div class="col-sm-5">
                    @Html.EditorFor(model => model.CompanyId, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.CompanyId, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-sm-10">
                    <input type="submit" value="Save" class="btn btn-primary btn-sm" />
                </div>
            </div>
        </div>
    </div>

    
}

<div>
    @Html.ActionLink("Back to List", "BranchList")
</div>
