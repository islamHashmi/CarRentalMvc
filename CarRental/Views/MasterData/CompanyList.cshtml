@model IEnumerable<CarRental.ViewModel.CompanyViewModel>

@{
    ViewBag.Title = "CompanyList";
}

<h3>Companies</h3>
<hr />

<div class="card">
    <div class="card-header">
        @Html.ActionLink("Create New", "CompanyManage")
    </div>
    <table class="table table-sm table-responsive-sm">
        <tr class="thead-light">
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone2)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone2)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        @Html.ActionLink("Edit", "CompanyManage", new { key = HelperClass.Encrypt(item.CompanyId) },new { @class= "btn btn-secondary btn-sm" })
                        @Html.ActionLink("Details", "CompanyDetails", new { key = HelperClass.Encrypt(item.CompanyId) }, new { @class = "btn btn-secondary btn-sm" })
                        @Html.ActionLink("Delete", "CompanyDelete", new { key = HelperClass.Encrypt(item.CompanyId) }, new { @class = "btn btn-secondary btn-sm" })
                    </div>                    
                </td>
            </tr>
        }

    </table>

</div>

