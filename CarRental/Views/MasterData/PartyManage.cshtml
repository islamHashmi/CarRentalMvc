@model CarRental.ViewModel.PartyViewModel

@{
    ViewBag.Title = "PartyManage";
}
<h4>Party</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PartyId)
