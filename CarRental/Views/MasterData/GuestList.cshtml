@model IEnumerable<CarRental.ViewModel.GuestViewModel>

@{
    ViewBag.Title = "GuestList";
}

<h2>Guests</h2>

<div class="card">
    <div class="card-header">
        @Html.ActionLink("Create New", "GuestManage")
    </div>
    <div class="table-responsive">
        <table class="table table-sm">
            <tr class="thead-light">
                <th>
                    @Html.DisplayNameFor(model => model.BranchId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PartyId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GuestName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DepartmentId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CarModelId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactNumber1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactNumber2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactNumber3)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BranchName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PartyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GuestName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModelName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactNumber1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactNumber2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactNumber3)
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            @Html.ActionLink("Edit", "GuestManage", new { key = HelperClass.Encrypt(item.GuestId) }, new { @class = "btn btn-secondary btn-sm" })
                            @Html.ActionLink("Details", "GuestDetails", new { key = HelperClass.Encrypt(item.GuestId) }, new { @class = "btn btn-secondary btn-sm" })
                            @Html.ActionLink("Delete", "GuestDelete", new { key = HelperClass.Encrypt(item.GuestId) }, new { @class = "btn btn-secondary btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
    
</div>
